<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

    <!-- Data source initialization -->
    <bean id="dataSourceConnection"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="org.h2.Driver"/>
        <property name="url" value="jdbc:h2:./lmst"/>
        <property name="username" value=""/>
        <property name="password" value=""/>
    </bean>

    <!-- dataSourceForJdbcTemplateLMST -->
    <bean id="dataSourceForJdbcTemplateLMST"
          class="deseptikon.monya.parcels.spring_jdbc.jdbc.LmstQuery">
        <property name="dataSource" ref="dataSourceConnection"/>
    </bean>
